include ../../mixins/svg_sprite

section.back-call
    .container
        .flex-row
            .back-call__have-questions
                h4.title Есть вопросы?
                span Оставьте номер телефона и мы вам перезвоним!


            .back-call__me
                form(action="#")
                    .flex-row
                        .back-call__me__container-input-name
                            label
                                input(type="text"
                                placeholder="Имя"
                                name="name"
                                ).input

                        .back-call__me__container-privacy-policy
                            span Нажимая на кнопку отправить, вы соглашаетесь с #[a(href="#") политикой конфиденциальности]

                        .back-call__me__container-input-phone
                            label
                                input(type="tel"
                                placeholder="05 ________"
                                name="phone"
                                ).input

                        .back-call__me__container-input-send
                            button.button-send Отправить

            .back-call__container-img
                +add_svg({class: "back-call__container-img__pattern-1", icon: "pattern-1"})
                +add_svg({class: "back-call__container-img__pattern-2", icon: "pattern-2"})
                //.back-call__container-img__ellipse
                img(src="img/mobile.png", alt="mobile").back-call__container-img__mobile

            .back-call__container-img-ellipse
                .img-ellipse

