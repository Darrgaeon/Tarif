include ../../mixins/svg_sprite

section.nav-bar
    .container
        .flex-row
            a(href="#").nav-bar__logo-link
                +add_svg({class: "nav-bar__logo", icon: "logo"})

            include ../nav-bar/adaptive-menu

            .nav-bar__switch-language
                +add_svg({class: "nav-bar__switch-language__icon", icon: "www"})
                +add_svg({class: "nav-bar__switch-language__dropdown", icon: "dropdown"})
                select
                    option(value="rus") rus
                    option(value="eng") eng
