include ../../mixins/svg_sprite

section.nav-bar
    .container
        .nav-bar-container
            a(href="#").logo
                +add_svg({class: "nav-bar__logo", icon: "logo"})

            include ../nav-bar/adaptive-menu

            .nav-bar__switch-language
                span Rus
                +add_svg({class: "nav-bar__switch-language__icon", icon: "www"})
                +add_svg({class: "nav-bar__switch-language__dropdown", icon: "dropdown_bottom"})

                ul.switch-language__sub-menu
                    li(data-short-name="Eng") English
                    li(data-short-name="Rus") Russian
                    li(data-short-name="בְרִית") עִבְרִית
